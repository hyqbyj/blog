<header class="sticky top-0 z-50 bg-white/90 backdrop-blur-sm shadow-sm">
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <a href="/" class="text-2xl font-serif font-bold text-primary-600 transition hover:text-primary-700">
      我的博客
    </a>
    
    <nav class="hidden md:block">
      <ul class="flex gap-6">
        <li><a href="/" class="text-gray-700 hover:text-primary-600 transition duration-200">首页</a></li>
        <li><a href="/about" class="text-gray-700 hover:text-primary-600 transition duration-200">关于我</a></li>
        <li><a href="/blog" class="text-gray-700 hover:text-primary-600 transition duration-200">博客</a></li>
        <li><a href="/contact" class="text-gray-700 hover:text-primary-600 transition duration-200">联系方式</a></li>
      </ul>
    </nav>
    
    <button id="mobile-menu-button" class="md:hidden text-gray-700 hover:text-primary-600 focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>
  </div>
  
  <div id="mobile-menu" class="md:hidden hidden bg-white border-t">
    <ul class="container mx-auto px-4 py-3 flex flex-col gap-3">
      <li><a href="/" class="block py-2 text-gray-700 hover:text-primary-600 transition duration-200">首页</a></li>
      <li><a href="/about" class="block py-2 text-gray-700 hover:text-primary-600 transition duration-200">关于我</a></li>
      <li><a href="/blog" class="block py-2 text-gray-700 hover:text-primary-600 transition duration-200">博客</a></li>
      <li><a href="/contact" class="block py-2 text-gray-700 hover:text-primary-600 transition duration-200">联系方式</a></li>
    </ul>
  </div>
</header>

<script>
  // 移动菜单交互
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>