---
import Layout from '../layouts/Layout.astro';
import BlogCard from '../components/BlogCard.astro';

const allPosts = [
  {
    title: "我的编程学习之旅",
    description: "分享我如何开始学习编程，以及一路上的经验和教训。",
    date: "2025-03-15",
    image: "https://images.pexels.com/photos/574071/pexels-photo-574071.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    url: "/blog/frontend-journey",
    category: "职业发展"
  },
  {
    title: "学习python的心得体会",
    description: "python框架的学习经历和实践项目的总结与反思。",
    date: "2025-02-28",
    image: "https://images.pexels.com/photos/11035380/pexels-photo-11035380.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    url: "/blog/react-experience",
    category: "技术教程"
  },
  {
    title: "我最喜欢的5个设计工具",
    description: "介绍我日常工作中离不开的设计工具和使用技巧。",
    date: "2025-01-20",
    image: "https://images.pexels.com/photos/196644/pexels-photo-196644.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    url: "/blog/design-tools",
    category: "工具推荐"
  },
  {
    title: "构建数据分析体系的技巧",
    description: "探讨如何优化数据分析框架。",
    date: "2024-12-12",
    image: "https://images.pexels.com/photos/577585/pexels-photo-577585.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    url: "/blog/web-performance",
    category: "技术教程"
  },
  {
    title: "从初级到高级PM的成长之路",
    description: "我的职业发展历程以及对产品经理职业的思考。",
    date: "2024-11-05",
    image: "https://images.pexels.com/photos/7096/people-woman-coffee-meeting.jpg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    url: "/blog/career-growth",
    category: "职业发展"
  },
  {
    title: "用户画像实践",
    description: "如何打造科学的用户画像。",
    date: "2024-10-18",
    image: "https://images.pexels.com/photos/1092644/pexels-photo-1092644.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
    url: "/blog/responsive-design",
    category: "技术教程"
  }
];

const categories = [...new Set(allPosts.map(post => post.category))];
---

<Layout title="博客文章 - 吕加欣的个人博客" description="浏览我的博客文章集合，包括前端开发技术、设计思考和职业发展心得">
  <section class="py-12 bg-gradient-to-r from-primary-50 to-secondary-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl font-bold mb-4 text-gray-900">我的博客</h1>
        <p class="text-xl text-gray-700">分享我的技术见解、经验和想法</p>
      </div>
    </div>
  </section>
  
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap md:flex-nowrap gap-8">
        <aside class="w-full md:w-64 shrink-0">
          <div class="sticky top-24 bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-bold text-gray-800 mb-4">文章分类</h2>
            <ul class="space-y-2">
              <li>
                <a href="/blog" class="text-primary-600 font-medium hover:text-primary-700 transition">
                  全部文章
                </a>
              </li>
              {categories.map(category => (
                <li>
                  <a href={`/blog/category/${category}`} class="text-gray-700 hover:text-primary-600 transition">
                    {category}
                  </a>
                </li>
              ))}
            </ul>
            
            <h2 class="text-xl font-bold text-gray-800 mt-8 mb-4">热门标签</h2>
            <div class="flex flex-wrap gap-2">
              <a href="#" class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-primary-100 hover:text-primary-700 transition">
                R
              </a>
              <a href="#" class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-primary-100 hover:text-primary-700 transition">
                数据分析
              </a>
              <a href="#" class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-primary-100 hover:text-primary-700 transition">
                python
              </a>
              <a href="#" class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-primary-100 hover:text-primary-700 transition">
                设计
              </a>
              <a href="#" class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-primary-100 hover:text-primary-700 transition">
                分析框架
              </a>
              <a href="#" class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm hover:bg-primary-100 hover:text-primary-700 transition">
                职业发展
              </a>
            </div>
          </div>
        </aside>
        
        <div class="flex-1">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {allPosts.map(post => (
              <BlogCard
                title={post.title}
                description={post.description}
                date={post.date}
                image={post.image}
                url={post.url}
              />
            ))}
          </div>
          
          <div class="mt-12 flex justify-center">
            <nav aria-label="Pagination" class="flex justify-center">
              <a href="#" class="px-3 py-2 mx-1 text-gray-700 bg-white rounded-md shadow-sm hover:bg-primary-50">
                上一页
              </a>
              <a href="#" class="px-3 py-2 mx-1 text-white bg-primary-600 rounded-md shadow-sm">
                1
              </a>
              <a href="#" class="px-3 py-2 mx-1 text-gray-700 bg-white rounded-md shadow-sm hover:bg-primary-50">
                2
              </a>
              <a href="#" class="px-3 py-2 mx-1 text-gray-700 bg-white rounded-md shadow-sm hover:bg-primary-50">
                3
              </a>
              <span class="px-3 py-2 mx-1 text-gray-700">...</span>
              <a href="#" class="px-3 py-2 mx-1 text-gray-700 bg-white rounded-md shadow-sm hover:bg-primary-50">
                下一页
              </a>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>